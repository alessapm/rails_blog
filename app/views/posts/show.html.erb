
<%= render "partials/nav" %>

    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-8">

                <!-- Blog Post -->

                <!-- Title -->

                <h1><%= @post.title %></h1>

                <!-- Author -->
                <p class="lead">
                    by Alessa
                </p>

                <hr>

                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-time"></span> <%= @post.created_at.strftime("%B %e, %Y") %></p>

                <hr>

                <!-- Preview Image -->
                <img class="img-responsive" src="<%= @post.post_image %>" alt="">

                <hr>

                <!-- Post Content -->
                <p><%= @post.post_text %></p>

                <hr>

                <a href="/posts/<%= @post.id %>/edit"><button class="btn btn-primary">Edit</button></a>

                <!-- Blog Comments -->

                <!-- Comments Form -->
                <div class="well">
                    <h4>Leave a Comment:</h4>

                    <%= form_for [@post, @new_comment] do |f| %>
                        <div class="margin-top-20">
                                <%= f.text_field :comment_text, class: "form-control", placeholder: "your comment" %><br>
                        </div>

                        <div class="margin-top-20">
                            <%= f.submit "Add Comment", class: "btn btn-primary"%>
                        </div>
                    <% end %>

                </div>

                <hr>

                <!-- Posted Comments -->
                <% @comments.each do |comment| %>
                  <div class="media">
                          <h4 class="media-heading">
                              <small><%= comment.created_at.strftime("%B %e, %Y") %></small>
                          </h4>
                          <%= simple_format(comment.comment_text) %>
                    </div>
                <% end %>


                <!-- Comment -->
